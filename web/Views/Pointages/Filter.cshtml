@model IEnumerable<BenevolePointageListItemModel>

@{
    Layout = null;
}

<tbody id="updateBody">
@foreach (var item in Model) {
    <tr>
        <td>
            <span>@Html.DisplayFor(modelItem => item.BenevoleNom)</span>&nbsp;
        </td>
        <td>
            <span>@Html.DisplayFor(modelItem => item.BenevolePrenom)</span>
        </td>
        <td>
            <a asp-action="Benevole" asp-route-id="@item.BenevoleID"><i class="glyphicon glyphicon-calendar"></i> Gérer les pointages</a> | 
            <a asp-action="PrintIndex" asp-route-id="@item.BenevoleID"><i class="glyphicon glyphicon-print"></i> Editer une fiche</a>
        </td>
    </tr>
}
</tbody>
