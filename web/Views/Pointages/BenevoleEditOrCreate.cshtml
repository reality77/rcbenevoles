@model dal.models.Pointage

@{
    Layout = null;
}
 
<div id="detailPanel">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Journée du @Model.Date.ToString("d")</h3>
        </div>
        <div class="panel-body">
            <form asp-antiforgery="true" asp-action="EditOrCreate">
                <div class="form-group">
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="col-sm-4">
                                <label class="control-label">Type de journée :</label>
                            </div>
                            <div class="col-sm-8" style="margin-top:-10px">
                                <input asp-for="NbDemiJournees" type="hidden" />
                                <div class="radio">
                                    <label><input id="NbDemiJournees1" name="RadioNbDemiJournees" type="radio" value="1" /> Demi-journée</label>
                                </div>
                                <div class="radio">
                                    <label><input id="NbDemiJournees2" name="RadioNbDemiJournees" type="radio" value="2" /> Journée complète</label>
                                </div>
                                <span asp-validation-for="NbDemiJournees" class="text-danger"></span>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="col-sm-4">
                                <label asp-for="Distance" class="control-label">Distance (km) :</label>
                            </div>
                            <div class="col-sm-8">
                                <input asp-for="Distance" class="form-control" onblur="validateDistance();" />
                                <span id="validationDistance" class="text-danger" style="display:none"></span>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-xs-12" style="margin-top:8px">
                        <fieldset>
                            <div style="float:right">
                                <button type="submit" class="btn btn-success" onclick="editOrCreate(); return false;">Pointer</button>
                                <button id="btDelete" type="submit" class="btn btn-danger" onclick="remove(); return false;" style="display:@((Model.ID > 0) ? "inline" : "none")">Supprimer le pointage</button>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
