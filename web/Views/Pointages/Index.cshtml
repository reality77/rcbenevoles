@model PointageFilterModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-xs-12">
        <p>Recherchez le bénévole sur lequel vous souhaiter effectuer un pointage</p>
        @if (User.IsInRole("SuperAdmin"))
        {
            <div class="form-group">
                <div class="col-xs-12">
                    <div class="col-sm-4">
                        <label class="control-label">Centre :</label>
                    </div>
                    <div class="col-sm-5">
                        <select asp-for="CentreID" asp-items="@(new SelectList(Model.Centres, "ID", "Nom"))" class="form-control"></select>
                        <span asp-validation-for="CentreID" class="text-danger"></span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-xs-12">
                <input typeof="hidden" asp-for="CentreID" />
            </div>
        }
        <div class="col-xs-12" style="margin-top:8px">
            <div class="col-sm-4">
                <label class="control-label">Bénévole :</label>
            </div>
            <div class="col-lg-8">
                <div class="input-group">
                    <input type="text" asp-for="Term" class="form-control" placeholder="Rechercher un bénévole par nom ...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="filter(); return false;">Rechercher</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="updateBody">
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
<script type="text/javascript">

    function filter() {
        $.ajax({
            url: '@Url.Action("Filter")',
            data:
            {
                CentreID: $("#CentreID").val(),
                Term: $("#Term").val(),
            },
            contentType: 'application/json',
            dataType: 'html',
            type: 'GET',
            cache: false,
            success: function (data) {
                $('#updateBody').replaceWith(data);
            },
            error: function (data) {
                alert('Une erreur est apparue pendant le chargement des bénévoles');
            }
        });
    }
</script>  
}