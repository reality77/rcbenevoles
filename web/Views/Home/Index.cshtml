@model web.Models.LoginPasswordModel

@{
    ViewData["Title"] = "Bénévoles : Accueil";
}

<div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">

        @if (!User.Identity.IsAuthenticated)
        {
        <h2>Connexion</h2>

        <p>Veuillez vous authentifier pour accéder à l'application</p>

        <form asp-action="Login" asp-controller="Account">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </div>
        </form>
        }
        else
        {
            <h2>Accueil</h2>

            <p>Bienvenue @User.Identity.Name</p>

        }
    </div>
    <div class="col-md-3">
